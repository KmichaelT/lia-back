# Development Environment Configuration
# Copy this file to .env for local development

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=development
STRAPI_URL=http://localhost:1337

# Frontend URL (for CORS and references)
FRONTEND_URL=http://localhost:3000

# App Security Keys (Use these for development only!)
APP_KEYS="dev-key-1,dev-key-2,dev-key-3,dev-key-4"
API_TOKEN_SALT=dev-api-token-salt
ADMIN_JWT_SECRET=dev-admin-jwt-secret
TRANSFER_TOKEN_SALT=dev-transfer-token-salt
JWT_SECRET=dev-jwt-secret
ENCRYPTION_KEY=dev-encryption-key

# Database Configuration (Local SQLite for development)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Email Configuration (Development)
DEFAULT_FROM_EMAIL=dev@localhost
DEFAULT_REPLY_TO_EMAIL=dev@localhost
ADMIN_EMAIL=admin@localhost

# SMTP Configuration (For testing emails locally)
# Option 1: Use a service like Mailtrap or MailHog
# Option 2: Use your Gmail account with app password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional: AWS S3 (Usually not needed for development)
# AWS_ACCESS_KEY_ID=
# AWS_ACCESS_SECRET=
# AWS_REGION=us-east-1
# AWS_BUCKET=dev-uploads

# Optional: CDN (Usually not needed for development)
# CDN_URL=