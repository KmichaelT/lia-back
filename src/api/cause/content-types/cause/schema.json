{
  "kind": "collectionType",
  "collectionName": "causes",
  "info": {
    "singularName": "cause",
    "pluralName": "causes",
    "displayName": "Cause",
    "description": "Fundraising causes and campaigns"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "string"
    },
    "blogLink": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::blog.blog",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasDetails"
            },
            true
          ]
        }
      }
    },
    "hasDetails": {
      "type": "boolean"
    },
    "link": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::link.link"
    }
  }
}
