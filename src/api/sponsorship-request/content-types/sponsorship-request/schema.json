{
  "kind": "collectionType",
  "collectionName": "sponsorship_requests",
  "info": {
    "singularName": "sponsorship-request",
    "pluralName": "sponsorship-requests",
    "displayName": "sponsorship-request"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "country": {
      "type": "string",
      "required": true
    },
    "motivation": {
      "type": "text",
      "required": true
    },
    "requestStatus": {
      "type": "enumeration",
      "enum": [
        "submitted",
        "pending",
        "matched",
        "rejected"
      ]
    },
    "submittedAt": {
      "type": "datetime"
    },
    "sponsee": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 1
    },
    "preferredAge": {
      "type": "string"
    },
    "preferredGender": {
      "type": "enumeration",
      "enum": [
        "Male",
        "Female"
      ]
    },
    "hearAboutUs": {
      "type": "enumeration",
      "enum": [
        "website",
        "social-media",
        "friend-family",
        "event",
        "newsletter",
        "other"
      ]
    },
    "child": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::child.child",
      "inversedBy": "sponsorship_requests"
    },
    "notes": {
      "type": "text"
    },
    "processedAt": {
      "type": "datetime"
    },
    "processedBy": {
      "type": "string"
    }
  }
}
