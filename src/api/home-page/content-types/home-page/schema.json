{
  "kind": "singleType",
  "collectionName": "home_pages",
  "info": {
    "singularName": "home-page",
    "pluralName": "home-pages",
    "displayName": "Home Page",
    "description": "Main homepage content management"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "heroTitle": {
      "type": "string",
      "default": "Changing lives one child at a time!",
      "required": true
    },
    "heroDescription": {
      "type": "text"
    },
    "heroBackgroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "donateNowButton": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::link.link"
    },
    "watchVideoButton": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::link.link"
    },
    "heroStats": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stat.stat"
    },
    "causesTitle": {
      "type": "string",
      "default": "Our Causes"
    },
    "causesHeader": {
      "type": "string",
      "default": "Making a Difference"
    },
    "causesDescription": {
      "type": "text"
    },
    "causes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cause.cause"
    },
    "eventsTitle": {
      "type": "string",
      "default": "Upcoming Events"
    },
    "eventsHeader": {
      "type": "string",
      "default": "Join Our Community"
    },
    "eventsDescription": {
      "type": "text"
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event"
    },
    "servicesTitle": {
      "type": "string",
      "default": "What We Do"
    },
    "servicesHeader": {
      "type": "string",
      "default": "Our Services"
    },
    "servicesDescription": {
      "type": "text"
    },
    "services": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service.service"
    }
  }
}
