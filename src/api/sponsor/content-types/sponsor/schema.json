{
  "kind": "collectionType",
  "collectionName": "sponsors",
  "info": {
    "singularName": "sponsor",
    "pluralName": "sponsors",
    "displayName": "Sponsor"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": false
    },
    "lastName": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string",
      "required": false
    },
    "address": {
      "type": "string",
      "required": false
    },
    "city": {
      "type": "string",
      "required": false
    },
    "country": {
      "type": "string",
      "required": false
    },
    "sponsorshipStatus": {
      "type": "enumeration",
      "required": true,
      "default": "request_submitted",
      "enum": [
        "request_submitted",
        "pending",
        "matched"
      ]
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::child.child",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "sponsorshipStatus"
            },
            "matched"
          ]
        }
      },
      "mappedBy": "sponsor"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "profileComplete": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  }
}
