{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Organization services and programs"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "enumeration",
      "enum": [
        "Flame",
        "GraduationCap",
        "Home",
        "Users"
      ]
    },
    "hasDetails": {
      "type": "boolean",
      "default": false
    },
    "learnMoreBlog": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::blog.blog",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "hasDetails"
            },
            true
          ]
        }
      }
    }
  }
}
