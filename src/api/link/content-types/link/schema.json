{
  "kind": "collectionType",
  "collectionName": "links",
  "info": {
    "singularName": "link",
    "pluralName": "links",
    "displayName": "Link",
    "description": "Centralized link management"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "label": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "default": "external",
      "enum": [
        "social",
        "cta",
        "navigation",
        "external"
      ]
    },
    "platform": {
      "type": "string"
    },
    "isExternal": {
      "type": "boolean",
      "default": false
    },
    "opensInPopup": {
      "type": "boolean",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "isExternal"
            },
            false
          ]
        }
      }
    }
  }
}
